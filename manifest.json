{
    "manifest_version": 3,
    "name": "Snippet Expander",
    "version": "1.2",
    "description": "Replace shortcut keys with predefined text snippets.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ]
  }
  
